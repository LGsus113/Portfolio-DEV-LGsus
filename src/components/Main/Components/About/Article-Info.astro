---
import TextUse from "@/utils/Text-Use.astro";

import { basics } from "@cv";

const colors = ["text-green-300/[.7]", "text-purple-300/[.7]", "text-purple-300/[.7]"];

const data = basics.summaries.map((item, index) => ({
  description: item.text,
  className: colors[index % colors.length]
}));
---

<article class="flex flex-col xl:flex-row gap-5 items-center justify-between">
  <div class="xl:w-2/3 flex flex-col gap-3">
    {
      data.map(({ description, className }) => (
        <TextUse description={description} className={`${className} text-sm md:text-base xl:text-lg text-wrap`} cv={false} />
      ))
    }
  </div>
  <div
    class="rounded-full size-48 xl:size-72 overflow-hidden border border-yellow-200/[.7] backdrop-blur-sm"
  >
    <slot></slot>
  </div>
</article>
