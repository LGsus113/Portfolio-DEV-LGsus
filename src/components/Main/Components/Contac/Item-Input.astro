---
interface Props {
  label: string;
  type:
    | "textarea"
    | "text"
    | "email"
    | "password"
    | "number"
    | "tel"
    | "url"
    | "search"
    | "date"
    | "time"
    | "datetime-local"
    | "month"
    | "week";
  name: string;
  required: boolean;
}

const { label, type, name, required } = Astro.props;
const isTextarea = type === "textarea";
---

<div class="flex flex-col gap-1">
  <label for={name} class="text-green-200">{label}:</label>
  {
    isTextarea ? (
      <textarea
        id={name}
        name={name}
        placeholder={`Escribe tu ${name} aquí...`}
        required={required}
        class="rounded-md p-1 text-purple-200 bg-purple-300/[.4]"
        rows="4"
      />
    ) : (
      <input
        type={type}
        id={name}
        name={name}
        placeholder={`Escribe tu ${name} aquí...`}
        required={required}
        class="p-1 text-purple-200 bg-purple-300/[.4] rounded-md "
      />
    )
  }
</div>
