---
import "./src/style/global.css";
import { ClientRouter } from "astro:transitions";
import type { LayoutProps } from "@/type/type";
import LogoLGsus from "@public/lgsus.webp";

const { title, description, clasName } = Astro.props as LayoutProps;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={LogoLGsus.src} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class:list={[clasName, "flex flex-col items-center"]}>
    <header class="w-full h-auto">
      <slot name="header" />
    </header>
    <main id="mainSection" class="w-10/12 xl:w-[1120px]">
      <slot name="main" />
    </main>
    <footer class="w-full h-auto flex items-center justify-center">
      <slot name="footer" />
    </footer>
  </body>
</html>
