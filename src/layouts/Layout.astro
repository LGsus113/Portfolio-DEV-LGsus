---
import LogoLGsus from "@public/lgsus.webp";
import "@fontsource-variable/onest";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={LogoLGsus.src} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col items-center">
    <div
      class="fixed top-0 left-0 z-[-2] min-h-screen min-w-full bg-[#000000] bg-[radial-gradient(#ffffff33_1px,#00091d_1px)] bg-[size:20px_20px] overflow-hidden"
    >
    </div>
    <header
      id="LGsus-Portfolio"
      class="w-full h-auto fixed flex items-center justify-center py-4 bg-black/[.3] backdrop-blur-sm z-50 border-b border-white"
    >
      <slot name="header" />
    </header>
    <main id="mainSection" class="w-10/12 xl:w-[1120px]">
      <slot name="main" />
    </main>
    <footer
      class="w-11/12 h-auto 2xl:w-[1420px] bg-white rounded-lg shadow-sm dark:bg-gray-900 m-4"
    >
      <slot name="footer" />
    </footer>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }

  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    min-height: 100vh;
    overflow-x: hidden;
  }

  html {
    font-family:
      "Onest",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      "Segoe UI Emoji",
      "Apple Color Emoji",
      "Noto Color Emoji",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif,
      sans-serif;
    scroll-behavior: smooth;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
