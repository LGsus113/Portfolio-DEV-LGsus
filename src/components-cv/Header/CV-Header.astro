---
import Impresora from "@/icons/impresora.astro";
import Atras from "@/icons/atras.astro";

const className =
  "border-2 border-black backdrop-blur-md p-2 rounded-lg opacity-70 hover:opacity-100 transition-all duration-200 cursor-pointer no-print";
---

<div class="w-full h-auto fixed flex items-center justify-start gap-5 p-4 z-50">
  <a href="/" target="_self" rel="noopener noreferrer" class={className}>
    <Atras class="size-4 md:size-8 text-black" />
  </a>
  <button onclick="window.print()" class={className}>
    <Impresora class="size-4 md:size-8 text-black" />
  </button>
</div>

<style>
  @media print {
    .no-print {
      display: none;
    }
  }
</style>
