---
import type { HeaderMe } from "@/type/type";
import UbicationIcon from "@/icons/ubication.astro";
import DNI from "@/icons/dni.astro";
import CumpleAnios from "@/icons/cumpleanios.astro";
import Phone from "@/icons/phone.astro";
import Email from "@/icons/email.astro";

const { label, name, fecnac, dni, email, phone, city, region } =
  Astro.props as HeaderMe;
---

<header class="text-center md:text-start flex flex-col gap-2">
  <h1 class="text-2xl text-black font-bold">
    <a href="/" target="_self" rel="noopener noreferrer" class="hover:underline"
      >{name}</a
    >
  </h1>
  <h2 class="text-md">{label}</h2>
  <div class="flex gap-5 justify-center lg:justify-start items-center">
    <div class="flex flex-col gap-3">
      <span
        class="text-lg flex items-center justify-center md:justify-start gap-2"
      >
        <DNI class="size-6 text-gray-500" /> DNI:
        {dni}
      </span>
      <span
        class="text-lg flex items-center justify-center md:justify-start gap-2"
      >
        <Email class="size-6 text-gray-500" />
        {email}
      </span>
    </div>
    <div class="flex flex-col gap-3">
      <span
        class="text-lg flex items-center justify-center md:justify-start gap-2"
      >
        <CumpleAnios class="size-6 text-gray-500" /> Fec. Nac.:
        {fecnac}
      </span>
      <span
        class="text-lg flex items-center justify-center md:justify-start gap-2"
      >
        <Phone class="size-6 text-gray-500" />
        {phone}
      </span>
    </div>
  </div>
  <span class="text-lg flex items-center justify-center md:justify-start gap-2">
    <UbicationIcon class="size-6 text-gray-500" />
    {city}, {region}
  </span>
</header>
